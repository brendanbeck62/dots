{
    "vim.vimrc.enable": true,
    "editor.minimap.enabled": false,
    "editor.cursorSurroundingLines": 8,
    "workbench.startupEditor": "none",
    "markdown.extension.list.indentationSize": "inherit",
    "editor.lineNumbers": "relative",
    "vim.smartRelativeLine": true,
    "[python]": {
        "editor.formatOnType": true
    },
    "[hcl, terraform, terraform-vars, rb]": {
        "editor.tabSize": 2
    },
    "editor.largeFileOptimizations": false,
    "editor.renderWhitespace": "trailing",
    "workbench.tree.indent": 10,
    "workbench.editorAssociations": {
        "*.csv": "gc-excelviewer-csv-editor"
    },
    "todo-tree.highlights.useColourScheme": true,
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "background": "#FFFF00",
            "foreground": "#000000",
        },
        "FIXME": {
            "type": "line",
            "icon": "alert",
            "foreground": "#000000",
            "iconColour": "#00FFFF",
            "gutterIcon": true
        }
    },
    "java.autobuild.enabled": false,
    "explorer.excludeGitIgnore": true,
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.swp": true
    },
    "files.trimTrailingWhitespace": true,
    "git.openRepositoryInParentFolders": "always",
    "explorer.confirmDragAndDrop": false,
    "java.configuration.runtimes": [],
    "yaml.customTags": [
        "!Base64 scalar",
        "!Cidr scalar",
        "!And sequence",
        "!Equals sequence",
        "!If sequence",
        "!Not sequence",
        "!Or sequence",
        "!Condition scalar",
        "!FindInMap sequence",
        "!GetAtt scalar",
        "!GetAtt sequence",
        "!GetAZs scalar",
        "!ImportValue scalar",
        "!Join sequence",
        "!Select sequence",
        "!Split sequence",
        "!Sub scalar",
        "!Transform mapping",
        "!Ref scalar",
    ],
    // Enable/disable default YAML formatter (requires restart)
    "yaml.format.enable": true,
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "github.copilot.editor.enableAutoCompletions": false,
    "github.copilot.chat.welcomeMessage": "never",
    "github.copilot.editor.enableCodeActions": false,
    "editor.accessibilitySupport": "off",
    "xml.server.vmargs": "-Xmx128M",
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "cmake.showOptionsMovedNotification": false,
    "peacock.affectActivityBar": false,
    "peacock.affectSashHover": false,
    "peacock.showColorInStatusBar": false,
    "accessibility.dimUnfocused.enabled": true,
    "accessibility.dimUnfocused.opacity": 0.7,
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "workbench.colorCustomizations": {
        // colors from ghostty's theme
        "editor.foreground": "#ebdbb2",
        "editor.background": "#111111",

        "editorGroupHeader.tabsBackground": "#111111",

        "tab.unfocusedActiveBackground": "#111111",
        "tab.inactiveBackground": "#111111",
        "tab.activeBackground": "#1f1f1f",

        "activityBar.background": "#111111",
        "sideBar.background": "#111111",
        "titleBar.activeBackground": "#111111"
    },
    "workbench.settings.editor": "json",
    "editor.wordWrap": "off",
}
